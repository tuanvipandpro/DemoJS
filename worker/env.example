# Environment Configuration
# Worker sẽ tự động detect environment và sử dụng cấu hình phù hợp
NODE_ENV=development

# ============================================================================
# DEVELOPMENT MODE (NODE_ENV=development)
# ============================================================================
# Sử dụng Gemini API + Local Queue

# Gemini Configuration (Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# Queue Configuration (local queue - không cần AWS)
QUEUE_TYPE=local

# ============================================================================
# PRODUCTION MODE (NODE_ENV=production)
# ============================================================================
# Sử dụng AWS SQS + Bedrock LLM

# AWS Configuration (required for production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SQS Configuration (required for production)
# SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/insighttestai-queue

# Bedrock Configuration (for production)
# BEDROCK_MODEL_ID=anthropic.claude-3.5-sonnet
# BEDROCK_REGION=us-east-1

# ============================================================================
# COMMON CONFIGURATION (cả dev và production)
# ============================================================================

# Database Configuration - Individual parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=insighttestai
DB_USER=insight
DB_PASS=insightp
DB_POOL_SIZE=10
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8081

# Worker Configuration
MAX_RETRY=3
CONFIDENCE_THRESHOLD=0.8
WORKER_CONCURRENCY=5

# Logging Configuration
LOG_LEVEL=info

# Server Configuration
PORT=3002
